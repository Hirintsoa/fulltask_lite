<div id="<%= dom_id task %>" class="w-full sm:w-auto my-5 space-y-5">
  <h1 class="font-bold text-4xl">Under <%= task.task_list.title %></h1>

  <div class="flex items-center justify-start gap-2">
    <h2 class="font-semibold text-2xl"><%= task.title %></h2>
    <%= format_priority(task.priority) %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= task.description %>
  </div>
  <div>
    <div class="w-full flex items-center gap-2">
      <strong class="block font-medium mb-1">Completed: <%= task.completed? ? "Yes" : "No" %></strong>
      <%= button_to toggle_completion_task_list_task_path(task.task_list, task), method: :patch, class: "px-2 py-1 border rounded #{task.completed? ? 'border-amber-900 text-amber-900' : 'border-emerald-900 text-emerald-900'}" do %>
        Set as <%= task.completed? ? 'incomplete' : 'complete' %>
      <% end %>
    </div>
  </div>
</div>
