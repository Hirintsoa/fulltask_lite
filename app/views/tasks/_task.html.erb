<div id="<%= dom_id task %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= task.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= task.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Completed:</strong>
    <%= task.completed? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Priority:</strong>
    <%= task.priority %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Task list:</strong>
    <%= task.task_list_id %>
  </div>
</div>
