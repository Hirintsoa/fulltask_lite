<% content_for :title, "Task lists" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Task lists</h1>
    <%= link_to "New task list", new_task_list_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="task_lists" class="min-w-full divide-y divide-gray-200 space-y-5 mt-5">
    <% if @task_lists.any? %>
      <%= render partial: "task_list", collection: @task_lists %>
    <% else %>
      <p class="text-center my-10">No task lists found.</p>
    <% end %>
  </div>
</div>
